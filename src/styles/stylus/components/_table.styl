.app-table
  border 1px solid var(--grey_3) !important
  .v-text-field__slot
    input
      text-align right
  &--availability
    thead
      tr:not(.v-datatable__progress)
        th
          padding 35px 10px !important
          font-size 1em
        th:first-child,
        th:last-child
          width 160px
        th:last-child
          background-color var(--sand)
    tr
      td
        font-size 1em
        padding 20px 10px !important
      th:last-child,
      td:last-child
        background-color var(--sand)
      td:first-child
        padding 20px 30px !important
      td:last-child
        padding 20px 50px !important
      &:hover
        background transparent !important

    thead tr:first-child,
    tbody tr:not(:last-child)
      border-bottom 1px solid var(--grey_3) !important

    .v-input
      &__control
        max-width 40px
      &--is-disabled
        .v-input__slot
          &:before
            content none
          .v-text-field__slot
            input
              color #000 !important
      &--checkbox
        align-items center !important
      .v-input__slot,
      &--selection-controls__input
        margin 0
      .v-text-field__slot
        input
          text-align right

    @media (max-width: 768px)
      table, tr, td
        display block
        thead
          display none
        tbody
          display flex
          flex-direction row
          flex-wrap wrap
          tr
            width 32%
            &:nth-child(2n+1)
              width 68%
            &:not(:last-child)
              border-bottom none !important
            &:nth-of-type(1) td,
            &:nth-of-type(3) td
              &:before
                font-family $body-font-family-medium
                font-size 1em
              &:nth-of-type(2):before
                content: "M"
              &:nth-of-type(3):before,
              &:nth-of-type(5):before
                content: "T"
              &:nth-of-type(4):before
                content: "W"
              &:nth-of-type(6):before
                content: "F"
              &:nth-of-type(7):before,
              &:nth-of-type(8):before
                content: "S"
              &:nth-of-type(9):before
                content: "Pay/hour"

            td:not(:last-child)
              border-bottom 1px solid var(--grey_3)
            td:first-child,
            td:last-child
              height 70px
              text-align center
            td:first-child
              padding 16px 10px!important
            td:last-child
              padding 0 25px !important
              .v-input
                margin-top 0
  &--availability-without-params
    tr
      td
        font-size 1em
        padding 20px 10px !important
      th:last-child,
      td:last-child
        background-color var(--sand)
      td:first-child
        padding 20px 30px !important
      td:last-child
        padding 20px 50px !important
      &:hover
        background transparent !important
    .v-input
      &__control
        max-width 40px
      &--is-disabled
        .v-input__slot
          &:before
            content none
        .v-text-field__slot
          input
            color #000 !important
      &--checkbox
        align-items center !important
      .v-input__slot,
      &--selection-controls__input
        margin 0
      .v-text-field__slot
        input
          text-align right
table.v-table
  tbody tr:hover
    background-color transparent !important
  tbody > tr
    border: none !important
  tbody > tr:not(:first-child)
    border-top 1px solid var(--grey_3) !important
  tbody > tr.v-datatable__expand-row
    border: none !important


