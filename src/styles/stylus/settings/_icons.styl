// BASE
// =========================================================
.svg-icon
  display inline-block
  width 47px
  height 47px
  color: currentColor
  vertical-align middle
  fill none
  stroke currentColor
.svg-fill
  fill currentColor
  stroke none
.svg-up
  /* default */
  transform rotate(0deg)
.svg-right
  transform rotate(90deg)
.svg-down
  transform rotate(180deg)
.svg-left
  transform rotate(-90deg)

