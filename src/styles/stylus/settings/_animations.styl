.shaking
  -webkit-animation-name shaking
  -webkit-animation-duration 10s
  -webkit-transform-origin 50% 50%;
  -webkit-animation-iteration-count infinite
  -webkit-animation-timing-function linear

@-webkit-keyframes shaking {
  0% { -webkit-transform: translate(2px, 1px) rotate(23deg) }
  10% { -webkit-transform: translate(-1px, -2px) rotate(22deg) }
  20% { -webkit-transform: translate(-3px, 0px) rotate(24deg) }
  30% { -webkit-transform: translate(0px, 2px) rotate(23deg) }
  40% { -webkit-transform: translate(1px, -1px) rotate(24deg) }
  50% { -webkit-transform: translate(-1px, 2px) rotate(22deg) }
  60% { -webkit-transform: translate(-3px, 1px) rotate(23deg) }
  70% { -webkit-transform: translate(2px, 1px) rotate(22deg) }
  80% { -webkit-transform: translate(-1px, -1px) rotate(24deg) }
  90% { -webkit-transform: translate(2px, 2px) rotate(23deg) }
  95% { -webkit-transform: translate(1px, -2px) rotate(22deg) }
  100% { -webkit-transform: translate(2px, 1px) rotate(23deg) }
}
