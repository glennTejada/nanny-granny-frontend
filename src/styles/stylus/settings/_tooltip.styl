.app-tooltip.v-tooltip__content
  box-shadow none !important
  border 1px solid var(--grey_2) !important
  opacity 1 !important
  &:before
    content ''
    display block
    width 12px
    height 12px
    border solid 1px
    border-color var(--grey_2) var(--grey_2) transparent transparent
    background-color #ffffff
    top -6px
    left calc(50% - 6px)
    -webkit-transform: rotate(-45deg)
    -moz-transform: rotate(-45deg)
    -ms-transform: rotate(-45deg)
    -o-transform: rotate(-45deg)
    transform: rotate(-45deg)
    position absolute
